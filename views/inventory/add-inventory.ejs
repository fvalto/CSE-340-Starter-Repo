<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <%- messages() %>
    
<div class="form">
    <form action="/inv/add-inventory" method="POST">
        <label for="classification">Classification:
            <%- classificationList %>
        </label>
        <label for="inv_make">Make:
            <input type="text" id="inv_make" name="inv_make" required>
        </label>
        <label for="inv_model">Model:
            <input type="text" id="inv_model" name="inv_model" required>
        </label>
        <label for="inv_year">Year:
            <input type="number" id="inv_year" name="inv_year" min="1900" max="2100" required>
        </label>
        <label for="inv_description">Description: <br>
            <textarea id="inv_description" name="inv_description" required></textarea>
        </label>
        <label for="inv_price">Price:
            <input type="number" step="0.01" id="inv_price" name="inv_price" required>
        </label>
        <label for="inv_miles">Miles:
            <input type="number" id="inv_miles" name="inv_miles" required>
        </label>
      
        <label for="inv_image">Image Path:
            <input type="text" id="inv_image" name="inv_image" required>
        </label>
        <label for="inv_thumbnail">Thumbnail Path:
            <input type="text" id="inv_thumbnail" name="inv_thumbnail" required>
        </label>
        <button type="submit">Add Inventory Item</button>
    </form>
</div>