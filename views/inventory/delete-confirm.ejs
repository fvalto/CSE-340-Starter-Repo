<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <%- messages() %>
    
<div class="form">
    <form id="deleteForm" action="/inv/delete-inventory" method="POST">
        <label for="inv_make">Make:
            <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>" readonly>
        </label>
        <label for="inv_model">Model:
            <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>" readonly>
        </label>
        <label for="inv_year">Year:
            <input type="number" id="inv_year" name="inv_year" min="1900" max="2100" required value="<%= locals.inv_year %>" readonly>
        </label>
        <label for="inv_price">Price:
            <input type="number" step="0.01" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>" readonly>
        </label>
        <p>Confirm Deletion - The delete is PERMANENT!!!</p>
        <button type="submit" name="submit" >Delete Vehicle</button>
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>